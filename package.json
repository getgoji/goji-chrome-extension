{
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off"
    }
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "prettier": "^2.8.8"
  }
}
